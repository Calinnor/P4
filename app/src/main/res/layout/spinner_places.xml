<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/place_color_tag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/place_color_tag"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/place_color_tag"
        android:gravity="center"
        android:text="place_name"
        android:textSize="18sp" />
<!-- after add the layout of spinner view add a class for the object view in spinner (placeitem)-->
</RelativeLayout>