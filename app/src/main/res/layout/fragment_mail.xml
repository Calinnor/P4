<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/enter_e_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:hint="@string/entrez_l_e_mail_du_participant"
        android:textSize="16sp"
        android:textColor="#1D1C1E"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/e_mail_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="2dp"
        android:background="@null"
        android:src="@drawable/ic_delete_anthracite_24dp"
        android:contentDescription="@string/deletemail" />

</LinearLayout>